<h1>Images</h1><br>

  <p><%= link_to 'Add to your Gallery!', new_image_path %></p> <br>

    <br>
    <% if current_user %>
      <% @images.each do |image| %>
        
        <div class="photo">
              
           <%= link_to image_tag(image.image), image %><!-- change URL display from text to image -->
           <p><%= image.name %></p>
           <p><%= link_to 'Delete', image, method: :delete, data: { confirm: 'Are you sure?' } %></p>
           
           
        </div>


      <% end %>
    <% end %>
  
  <% else %>
      <% @images.each do |image| %>
      <% if image.album_id %>
        <% if @albums.find(image.album_id).is_private == false %>
          
          <div class="photo">
              
           <%= link_to image_tag(image.image), image %><!-- change URL display from text to image -->
           <p><%= image.name %></p>
           <p><%= link_to 'Delete', image, method: :delete, data: { confirm: 'Are you sure?' } %></p>
           
           
          </div>
        <% end %>
      <% end %>
    <% end %>



